*
    color: black;

html, body, .input, .display
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    user-select: none;

body
    padding: 8px;

body:not(.combat-round)
    .display
        display: none;

body.combat-round
    .input
        display: none;

button
    font-size: 2em;
    padding: 0px;
    border: 1px solid black;

.digits
    width: 100%;
    height: 80%;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(4, 1fr);

.initiative-preview
    display: flex;
    flex-wrap: wrap;

.preview
    display: flex;
    width: 100%;
    height: 20%;

.initiative-preview button
    margin: 4px;
    height: 48px;
    width: 48px;
    font-size: 1em;

.initiative-preview button.with-summon
    border:  4px solid blue;

.summon.active
    border:  4px solid blue;

.initiative-entries
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex: 1;
    flex-direction: column;

    li
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4em;

        &.active 
            background-color: lightblue;
        

.confirmation
    height: 100%;
    width: 64px;
    flex-shrink: 0;
    margin-left: auto;